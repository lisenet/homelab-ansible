{{ ansible_managed | comment }}
# Generated by Ansible role {{ ansible_role_name }}

global
    log /dev/log  local0
    log /dev/log  local1 notice

{% if haproxy_chroot != '' %}
    chroot {{ haproxy_chroot }}
{% endif %}
    pidfile /var/run/haproxy.pid
    maxconn 4000
    user {{ haproxy_user }}
    group {{ haproxy_group }}
    daemon

{% if haproxy_socket != '' %}
    # turn on stats unix socket
    stats socket {{ haproxy_socket }} level admin
{% endif %}

    # utilise system-wide crypto-policies
    ssl-default-bind-ciphers PROFILE=SYSTEM
    ssl-default-server-ciphers PROFILE=SYSTEM
    ssl-dh-param-file {{ haproxy_dh_key }}

defaults
    mode    http
    log     global
    option  httplog
    option  dontlognull
    retries                 3
    timeout http-request    10s
    timeout queue           1m
    timeout connect         10s
    timeout client          1m
    timeout server          1m
    timeout http-keep-alive 10s
    timeout check           10s
    maxconn                 3000

frontend {{ haproxy_frontend_name }}
    bind {{ haproxy_frontend_bind_address }}:{{ haproxy_frontend_port }}
    option {{ haproxy_frontend_option }}
    mode {{ haproxy_frontend_mode }}
    default_backend {{ haproxy_backend_name }}

backend {{ haproxy_backend_name }}
    mode {{ haproxy_backend_mode }}
    balance {{ haproxy_backend_balance_method }}
    option {{ haproxy_backend_option }}
{% for backend in haproxy_backend_servers %}
    server {{ backend.name }} {{ backend.address }} check fall 3 rise 2
{% endfor %}

frontend stats 
    bind {{ haproxy_frontend_bind_address }}:{{ haproxy_stats_port }} ssl crt /etc/pki/tls/certs/haproxy.pem
    mode http
    stats enable
    stats uri /
    #stats hide-version
    stats refresh 30s
    stats realm HAProxy\ Statistics
    stats auth {{ haproxy_stats_user }}:{{ haproxy_stats_password }}
    stats admin if LOCALHOST
