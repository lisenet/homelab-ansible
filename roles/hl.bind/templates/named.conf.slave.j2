{{ ansible_managed | comment }}
# Generated by Ansible role {{ ansible_role_name }}

# BIND SLAVE CONFIG FILE
include "/etc/named.rfc1912.zones";
include "/etc/named.root.key";

acl "clients" {
	127.0.0.0/8;
	{{ homelab_address }}/{{ homelab_cidr_prefix }};
};

statistics-channels {
	inet 127.0.0.1 port {{ bind_statistics_port }} allow { 127.0.0.1; };
};

options {
	listen-on port 53 { 127.0.0.1; {{ homelab_dns2_server }}; }; ## SLAVE
	listen-on-v6 { none; };
	directory 	"/var/named";
	dump-file 	"/var/named/data/cache_dump.db";
	statistics-file "/var/named/data/named_stats.txt";
	memstatistics-file "/var/named/data/named_mem_stats.txt";
	secroots-file	"/var/named/data/named.secroots";
	recursing-file	"/var/named/data/named.recursing";
	forwarders { {{ homelab_dns_forwarder_server }}; 1.1.1.1; 8.8.8.8; 8.8.4.4; };

	tcp-clients 50;

	# Disable built-in server information zones
	version none;
	hostname none;
	server-id none;

	recursion yes;
	recursive-clients 50;
	allow-recursion { clients; };
	allow-query { clients; };
	allow-transfer { 10.11.1.10; };

	auth-nxdomain no;
	notify no;
	dnssec-enable yes;
	dnssec-validation auto;

	bindkeys-file "/etc/named.iscdlv.key";
	managed-keys-directory "/var/named/dynamic";

	pid-file "/run/named/named.pid";
	session-keyfile "/run/named/session.key";

	/* https://fedoraproject.org/wiki/Changes/CryptoPolicy */
	include "/etc/crypto-policies/back-ends/bind.config";
};

# Specifications of what to log, and where the log messages are sent
logging {
	channel "common_log" {
		file "{{ bind_log_file }}" versions 10 size 5m;
		severity dynamic;
		print-category yes;
		print-severity yes;
		print-time yes;
	};
	category default { "common_log"; };
	category general { "common_log"; };
	category queries { "common_log"; };
	category client { "common_log"; };
	category security { "common_log"; };
	category query-errors { "common_log"; };
	category lame-servers { null; };
};

zone "." IN {
	type hint;
	file "named.ca";
};

# Internal zone definitions
zone "{{ homelab_domain_name }}" {
	type slave;
	file "data/db.{{ homelab_domain_name }}";
	masters { {{ homelab_dns1_server }}; };
	allow-notify { {{ homelab_dns1_server }}; };
	zone-statistics yes;
};

zone "{{ homelab_reverse_zone }}.in-addr.arpa" {
	type slave;
	file "data/db.{{ homelab_reverse_zone }}";
	masters { {{ homelab_dns1_server }}; };
	allow-notify { {{ homelab_dns1_server }}; };
	zone-statistics yes;
};
