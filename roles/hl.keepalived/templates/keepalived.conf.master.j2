{{ ansible_managed | comment }}
# Generated by Ansible role {{ ansible_role_name }}

# Inspired by https://www.lisenet.com/2015/setting-up-a-load-balancing-haproxy-cluster-with-keepalived/
{% if keepalived_with_haproxy == "true" %}
# Keepalived with HAProxy
{% endif %}

global_defs {
   notification_email {
     root@localhost
   }
   notification_email_from root@localhost
   smtp_server localhost
   smtp_connect_timeout 30
   vrrp_skip_check_adv_addr
   vrrp_strict
   vrrp_garp_interval 0
   vrrp_gna_interval 0
}

{% if keepalived_with_haproxy == "true" %}
# Script used to check if HAProxy is running
vrrp_script check_haproxy {
    script "/usr/bin/killall -0 haproxy" # check the haproxy process
    interval 2 # every 2 seconds
    weight 2 # add 2 points if OK
}
{% endif %}

vrrp_instance VI_1 {
    state MASTER # MASTER on haproxy, BACKUP on haproxy2
    interface {{ ansible_default_ipv4.interface }} 
    virtual_router_id {{ keepalived_virtual_router_id }}
    priority 101 # 101 on haproxy, 100 on haproxy2
    advert_int 1
    authentication {
        auth_type PASS
        auth_pass {{ keepalived_auth_pass }}
    }
    virtual_ipaddress {
        {{ keepalived_vip }}
    }
{% if keepalived_with_haproxy == "true" %}
    track_script {
        check_haproxy
    }
{% endif %}
}
